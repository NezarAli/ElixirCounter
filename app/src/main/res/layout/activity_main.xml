<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".main.screens.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_125"
        android:layout_height="@dimen/_125"
        android:background="@drawable/circle_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15"
            android:background="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <brackets.elixircounter.shared.views.CustomTextRoundCornerProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rcAnimationEnable="true"
        app:rcBackgroundColor="@color/colorAccentLight"
        app:rcProgressColor="@color/colorAccent"
        app:rcRadius="0dp"
        app:rcTextInsideGravity="start"
        app:rcTextOutsideGravity="start"
        app:rcTextPositionPriority="inside"
        app:rcTextProgressColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>