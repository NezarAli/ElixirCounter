<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_215"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:minWidth="@dimen/_215"
    android:orientation="vertical">

    <brackets.elixircounter.shared.views.CustomTextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10"
        android:layout_marginTop="@dimen/_20"
        android:layout_marginEnd="@dimen/_10"
        android:layout_marginBottom="@dimen/_20"
        android:gravity="center"
        android:scrollbars="vertical"
        android:textSize="@dimen/_11"
        tools:text="Text" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_175"
        android:layout_marginStart="@dimen/_10"
        android:layout_marginTop="@dimen/_15"
        android:layout_marginEnd="@dimen/_10"
        android:layout_marginBottom="@dimen/_10"
        android:visibility="gone">

        <brackets.elixircounter.shared.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_3"
            android:text="@string/ask_permission"
            android:textSize="@dimen/_10" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <brackets.elixircounter.shared.views.CustomButton
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_negative"
            android:gravity="center"
            android:padding="@dimen/_3"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10"
            android:visibility="gone" />

        <brackets.elixircounter.shared.views.CustomButton
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_positive"
            android:gravity="center"
            android:padding="@dimen/_3"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10"
            android:visibility="gone" />

        <brackets.elixircounter.shared.views.CustomButton
            android:id="@+id/neutralButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_neutral"
            android:gravity="center"
            android:padding="@dimen/_3"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>